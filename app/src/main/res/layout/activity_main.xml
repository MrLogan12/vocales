<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnProcesar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="@string/btn_procesar"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/cbMinuscula"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/cbMinuscula"
        app:layout_constraintTop_toBottomOf="@+id/cbMinuscula" />

    <EditText
        android:id="@+id/etPalabra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="@string/hint_palabra"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContar"
        android:layout_width="105dp"
        android:layout_height="71dp"
        android:layout_marginTop="48dp"
        android:hint="@string/btn_contar"
        android:text="contar vocales"
        app:layout_constraintEnd_toEndOf="@+id/btnProcesar"
        app:layout_constraintStart_toStartOf="@+id/btnProcesar"
        app:layout_constraintTop_toBottomOf="@+id/btnProcesar" />

    <CheckBox
        android:id="@+id/cbMinuscula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:hint="@string/minuscula"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/etPalabra"
        app:layout_constraintStart_toStartOf="@+id/etPalabra"
        app:layout_constraintTop_toBottomOf="@+id/etPalabra" />
</androidx.constraintlayout.widget.ConstraintLayout>